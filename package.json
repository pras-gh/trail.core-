{
  "name": "tail.core",
  "version": "0.2.0",
  "private": true,
  "packageManager": "npm@11.6.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "postinstall": "npm run db:generate",
    "validate:env": "node scripts/validate-env.mjs",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:acceptance:idempotency": "node scripts/acceptance-idempotency.ts",
    "ci": "npm run validate:env && npm run lint && npm run typecheck && npm run test",
    "db:generate": "npm run generate -w @tail-core/db",
    "db:migrate:dev": "npm run migrate:dev -w @tail-core/db",
    "db:migrate:deploy": "npm run migrate:deploy -w @tail-core/db"
  },
  "overrides": {
    "prisma": "5.22.0",
    "@prisma/client": "5.22.0"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
